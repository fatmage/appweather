<div id="main-box">
    <h1> Weather Smasher T-Rex Ultra 3000 </h1>



    <div id="weather-box">
        <div>
            <h2> <%= @location %> </h2>
            <%= @time %>
        </div>
        <div style="float: left; width: 50%;">
            <div style="float: left; width: 50%"> 
                <img src="http://openweathermap.org/img/wn/<%= @icon %>.png" style="width: 60%; height: 60%"> 
            </div>
            <div style="float: left; height: 100%;">
                <div style="font-size: 4.0em;"> <%= @temp %> </div> 
                <div style-"font-size: 1.5em;"> <%= @desc %> </div>
            </div>
        </div>

        <div style="float: left; width: 50%;">
            <% @secondary.each do |i| %>
                <div class="secondary-info">
                    <div style="font-size: 2.0em; height: 40%; padding: 5px;"> <%= i[:text]%> </div> 
                    <div style-"font-size: 1.8em;"> <%= i[:val] %> </div>
                </div>
            <% end %>

        </div>
    </div>

    
    <div>
        <% @tertiary.each do |i| %>
            <div class="tertiary-info">
                <p style="font-size: 1.5em; height: 50%;"> <%= i[:text]%> </p> 
                <p style-"font-size: 1.2em;"> <%= i[:val] %> </p>
            </div>
        <% end %>
    </div>

    <div id="form-box">
        <h3> Do you want to check another city? </h3>
        <form action="/show_city">
            <input name="city" type="text">
            <button type="submit">Check</button>
        </form>
    </div>

</div>


